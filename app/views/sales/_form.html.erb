<%= form_with(model: sale, local: true) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.fields_for :customer do |customer_fields| %>
    <fieldset>
      <legend>Customer</legend>
      <div class="field">
        <%= customer_fields.label :name %>
        <%= customer_fields.text_field :name %>
      </div>
      <div class="field">
        <%= customer_fields.label :email %>
        <%= customer_fields.text_field :email %>
      </div>
    </fieldset>
  <% end %>

  <fieldset>
    <legend>Products</legend>

    <% @sale.line_items.each do |line_item| %>
      <%= form.fields_for :line_items, line_item do |line_item_fields| %>
        <table border>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
          </tr>
          <tr>
            <td><%= line_item_fields.text_field :product_id %></td>
            <td><%= line_item_fields.text_field :price %></td>
            <td><%= line_item_fields.text_field :quantity %></td>
          </tr>
        </table>
      <% end %>
    <% end %>

  </fieldset>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
